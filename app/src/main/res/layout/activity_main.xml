<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--    <include-->
<!--        android:id="@+id/toolbar"-->
<!--        layout="@layout/toolbar_main" />-->

    <LinearLayout
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/volk0"
        android:label="@string/app_name"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".activity.MainActivity">

        <!--<Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />-->

        <TextView
            android:id="@+id/text_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            android:layout_weight="15"
            android:background="@drawable/rounded_corner"
            android:clickable="true"

            android:ellipsize="end"
            android:focusable="true"

            android:padding="4dp"
            android:scrollbars="vertical"
            android:text="@string/text_on_start"
            android:textAlignment="center"
            android:textColor="#000000"


            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/goto_history"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:layout_weight="4"
                android:background="#00FFFFFF"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAuf"
                app:srcCompat="@android:drawable/ic_menu_recent_history" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="16" />

            <ImageButton
                android:id="@+id/add_to_favorites"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:layout_weight="4"
                android:background="#00FFFFFF"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textAuf"
                app:srcCompat="@android:drawable/btn_star" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/main_btn_gen"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="10"
                    style="@style/AppTheme.ButtonPrimary"
                    android:text="@string/main_button_name"
                    android:textSize="19sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/downvote_btn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    style="@style/AppTheme.ButtonPrimary"
                    android:text="@string/downvote_text" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="2" />

                <Button
                    android:id="@+id/upvote_btn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    style="@style/AppTheme.ButtonPrimary"
                    android:text="@string/upvote_text" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>